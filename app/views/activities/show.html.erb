<div style="background-image: url(<%= @activity.background_image_url %>); background-repeat: no-repeat;">
  <%= link_to activities_path, class: "back-arrow" do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>
  <div class="info_header">
    <h1><%= @activity.name %></h1>
    <p>Price: $<%= @activity.price %></p>
  </div>
  <div class="info_activity">
    <p><strong>Company Name:</strong> <%= @activity.company_name %></p>
    <p><strong>Address:</strong> <%= @activity.address %></p>
    <p><strong>Duration:</strong> <%= (@activity.duration) / 3600 %> hour(s)</p>
    <p><strong>Time:</strong> <%= @activity.start_time.time.strftime("%I:%M %p") %></p>
    <%= button_to 'Book Now', user_actions_path, id: "book-now", class: 'sign-in-front', params: { action_id: @activity.id } %>
    <br>
    
  </div>

  <br>
  <div id="map"
      class="mt-3"
      style="width: 100%; height: 200px; margin-bottom: 100px;z-index:-1;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="modal" id="ratingNotification" role="dialog" tabindex="-1" aria-labelledby="ratingNotification" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Rate this Activity</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Please rate how this activity improved your mood here.
        </div>
      </div>
    </div>
  </div>
</div>
