<div class="container p-0">
  <%= link_to :back, class: "back-arrow" do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>
  <div class="info_header curved_background" style="background-image: url(<%= @activity.photo_url %>); background-repeat: no-repeat; background-position: center; background-size: cover;">
    <h1><%= @activity.name %></h1>
    <p>Price: $<%= @activity.price %></p>
  </div>
  <div class="info_activity">
    <p><strong>Company Name:</strong> <%= @activity.company_name %></p>
    <p><strong>Address:</strong> <%= @activity.address %></p>
    <p><strong>Duration:</strong> <%= (@activity.duration) / 3600 %> hour(s)</p>
    <p><strong>Time:</strong> <%= @activity.start_time.time.strftime("%I:%M %p") %></p>
    <%= button_to 'Book Now', user_actions_path, id: "book-now", class: 'sign-in-front', params: { action_id: @activity.id } %>
    <br>
  </div>
  <br>
  <div id="map"
      class="mt-3"
      style="width: 100%; height: 300px; margin-bottom: 76px; z-index:-1;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

