<div class="container p-3" style="background-image: url(<%= @activity.background_image_url %>); background-repeat: no-repeat;">
  <div class="info_header">
    <h1><%= @activity.name %></h1>
    <p>Price: $<%= @activity.price %></p>
  </div>
  <div class="info_activity">
    <p><strong>Company Name:</strong><%= @activity.company_name %></p>
    <p><strong>Address:</strong> <%= @activity.address %></p>
    <p><strong>Duration:</strong> <%= (@activity.duration) / 3600 %> hour(s)</p>
    <p><strong>Time:</strong> <%= @activity.start_time.time.strftime("%I:%M %p") %></p>
    <%= button_to 'Book Now', user_actions_path, class: 'sign-in-front', params: { action_id: @activity.id } %>
    <br>
    <%= link_to 'Back to Activities', activities_path %>
  </div>

  <br>
  <div id="map"
      class="mt-3"
      style="width: 100%; height: 200px; margin-bottom: 100px;z-index:-1;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
